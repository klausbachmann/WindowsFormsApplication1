<Window x:Class="WpfApplication1.frmGreeting"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApplication1"
        mc:Ignorable="d"
        Title="Unsere Grüße" Height="300" Width="300">
    <Grid>
        <Canvas Background="{DynamicResource CheckBoxInnerBoxBorderBrush}">
            <Button x:Name="button" Content="Button" Canvas.Left="207" Canvas.Top="240" Width="75" Click="button_Click">
                <Button.Background>
                    <LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
                        <GradientStop Color="#FFF3F3F3" Offset="0"/>
                        <GradientStop Color="Red" Offset="1"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>
        </Canvas>

    </Grid>
</Window>
